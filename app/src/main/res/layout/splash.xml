<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ic_application_background"
    android:backgroundTint="@color/ic_application_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/splashscreen"
        android:layout_width="225dp"
        android:layout_height="639dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/apolele" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/caudex_italic"
        android:gravity="center"
        android:text="From Left4Dev"
        android:textColor="@color/armyGreenSub"
        android:textSize="30sp" />

</LinearLayout>