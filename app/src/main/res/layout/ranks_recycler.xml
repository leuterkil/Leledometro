<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewRanksRecycler"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        tools:srcCompat="@drawable/diakritiko_stratos_xiras_anthipoloxagos" />

    <TextView
        android:id="@+id/textViewRanksRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/caudex"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/armyGreenSub"
        android:textSize="36sp"
        android:textStyle="bold" />
</LinearLayout>