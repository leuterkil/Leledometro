<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LeledometroStratou" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ArmyGreen</item>
        <item name="colorPrimaryVariant">@color/ArmyGreen</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/armyGreenSub</item>
        <item name="colorSecondaryVariant">@color/armyGreenSub</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/ArmyGreen</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/armyGreenSub</item>
    </style>

    <style name="Theme.LeledometroStratou.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/ArmyGreen</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/armyGreenSub</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/armyGreenSub</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/ArmyGreen</item>

    </style>
</resources>